pipeline {
    
  agent any
    
    
    stages {
       
        stage ('Test and Build') {
    agent {
        docker {
            image 'openjdk:11'
            args '-v "$PWD":/app'
            reuseNode true
        }
    }
    steps {
        sh './gradlew clean build'
    }
}
        
        stage("build") {
            steps {
                echo 'building the application'
                
                
            }
        }
        stage("test") {
            steps {
                echo 'testin the application'
            }
        }
        stage("deploy") {
            steps {
                echo 'building the application'
            }
        }
    }   
}
