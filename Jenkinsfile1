pipeline {
    
  agent any
    stage ('Build') {
	steps {
		sh './gradlew clean build'
	}
 }

stage ('Test and Build') {
    agent {
        docker {
            image 'openjdk:11'
            args '-v "$PWD":/app'
            reuseNode true
        }
    }
    steps {
        sh './gradlew clean build'
    }


}

stage ('Deploy') {
    steps {
        sh 'docker run -d -p 8080:8080'
    }
   }
}
